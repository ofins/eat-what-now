{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "@/types/*": ["../packages/types/*"]
    },
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
