{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "@/types/*": ["../packages/types/*"]
    },
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "knexfile.ts",
    "migrations/**/*.ts",
    "migrations/20250607174407_create_restaurants_table.js"
  ],
  "exclude": ["node_modules"]
}
